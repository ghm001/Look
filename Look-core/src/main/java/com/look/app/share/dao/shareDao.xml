<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.look.app.share.dao.shareDao">

    <insert id="saveShare" parameterType="share" useGeneratedKeys="true" keyProperty="id"  flushCache="true">
        insert into share(title,uId,imageUrl1,imageUrl2,imageUrl3,imageUrl4,imageUrl5,imageUrl6,imageNum,userNickName,userPhotoUrl,uptime)
        values(#{title},#{uId},#{imageUrl1},#{imageUrl2},#{imageUrl3},#{imageUrl4},#{imageUrl5},#{imageUrl6},#{imageNum},#{userNickName},#{userPhotoUrl},#{uptime})
    </insert>
    <select id="getSomeShare" parameterType="int" resultType="share">
        SELECT * from share where id &gt;#{id}-10 AND id  &lt;#{id}
    </select>
    <delete id="deleteOneShare" parameterType="int">
        DELETE FROM share where id=#{id}
    </delete>
    <select id="getUserShare" parameterType="int" resultType="share">
        SELECT * FROM  share WHERE  uId=#{id}
    </select>

    <select id="getTop10" resultType="share">
        SELECT * FROM share WHERE 1=1 order by id DESC limit 10
    </select>
</mapper>

